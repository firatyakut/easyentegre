<script>
    $('#btnCheckOrder').on('click', function (event) {

        var $btn = $(this);
        $btn.button('loading');

        $.post('{{ catalog_url }}index.php?route=entegrasyon/update/orders', {}, function (data) {

            $btn.button('reset');
            if (data['total'] > 0) {

                Swal.fire({
                    title: 'Sipariş Kontrol',
                    text: 'Toplam' + data['total'] + ' Yeni Siparişiniz Var. Siparişler Sayfasını Yenilecenektir.',
                    icon: 'info',
                    showCancelButton: false,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sayfayı Yenile!'
                }).then((result) => {
                    if (result.value) {

                        window.location.href = 'index.php?route=entegrasyon/order&{{ token_link }}';

                    }
                })

            } else {

                if (data['message']) {

                    Swal.fire({
                        title: 'Sipariş Kontrol',
                        icon: 'warning',
                        text: data['message'],
                        confirmButtonColor: '#3085d6',
                        icon: 'warning',
                        confirmButtonText: 'Tamam'
                    })

                } else {

                    Swal.fire({
                        title: 'Sipariş Kontrol',
                        icon: 'info',
                        text: 'Hiç Yeni Sipariş Yok!.',
                        confirmButtonColor: '#3085d6',
                        icon: 'success',
                        confirmButtonText: 'Sağlık Olsun!'
                    })
                }

            }


        }, 'JSON');

    })
    $('#btnInvoiceSync').on('click', function (event) {

        var $btn = $(this);
        $btn.button('loading');

        $.post('{{ catalog_url }}index.php?route=entegrasyon/efatura/sync_invoice', {}, function (data) {

            $btn.button('reset');

            if (data['status']) {

