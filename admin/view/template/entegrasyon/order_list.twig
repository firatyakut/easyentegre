                                                        <i class="fa fa-download"></i></a>{% endif %}

                                            {% else %}<label class="label label-danger">Faturalanmadı</label><br>
                                            {% endif %}</td>

                                        <td class="text-right">
                                            <div style="min-width: 140px;">
                                                <div class="btn-group">
                                                    <a id="{{ order.order_id }}"
                                                       class="btn btn-success btnEmail {% if not efatura_status %} hidden {% endif %}"
                                                       data-toggle="tooltip" title="mail"><i
                                                                class="fa fa-paper-plane"></i> </a>
                                                    <a class="btn btn-danger" data-toggle="tooltip" title="Sil"
                                                       href="{{ order.delete }}"><i class="fa fa-trash-o"></i> </a>
                                                    <a data-toggle="tooltip" title="Sipariş Etiketi"
                                                       order_id="{{ order.order_id }}"
                                                       class="btn btn-info view_order"><i class="fa fa-tag"></i></a>
                                                    <button type="button" data-toggle="dropdown"
                                                            class="btn btn-primary dropdown-toggle hidden"><span
                                                                class="caret"></span></button>
                                                    <ul class="dropdown-menu dropdown-menu-right hidden">
                                                        <li><a href="{{ order.edit }}"><i
                                                                        class="fa fa-pencil"></i> {{ button_edit }}</a>
                                                        </li>
                                                        <li><a href="{{ order.order_id }}"><i
                                                                        class="fa fa-trash-o"></i> {{ button_delete }}
                                                            </a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td class="text-center" colspan="8">{{ text_no_results }}</td>
                                </tr>
                            {% endif %}
                            </tbody>

                        </table>
                    </div>
                </form>
                <div class="row">
                    <div class="col-sm-6 text-left">{{ pagination }}</div>
                    <div class="col-sm-6 text-right">{{ results }}</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).on('click', '.btnBulkDel', function () {
        var order_list = [];
        $('.btnBulkDel').button('loading');
        $(".table .select:checked").each(function () {
            var order_id = $(this).val();
            order_list.push(order_id);


        });
        if (order_list.length != 0) {

            deleteOrders(order_list[0], order_list);


        } else {
            $('.btnBulkDel').button('reset');
            Swal.fire('Ürün Seçmediniz');
        }


        function deleteOrders(item, pList) {


            var first_element = $("input[type='checkbox'][name='selected[]']:checked").first();
            var reference = first_element.val();


            var data = {};
            data.list = pList;

            if ($("#firstrow:checked").val()) {
                data.reference = reference;
            } else {
                data.reference = 0;
            }

            $.post('index.php?route=entegrasyon/order/delete_bulk&order_id=' + item + '&{{ token_link }}', data, function (json) {


                if (json['next']) {

                    deleteOrders(json['item'], json['list']);


                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true,
                        didOpen: (toast) => {
                            toast.addEventListener('mouseenter', Swal.stopTimer)
                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                        }
                    })

                    Toast.fire({
                        icon: 'success',
                        title: 'Silindi'
                    })


                } else {
                    $('.btnBulkDel').button('reset');
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true,
                        didOpen: (toast) => {
                            toast.addEventListener('mouseenter', Swal.stopTimer)
                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                        }
                    })

                    Toast.fire({
                        icon: 'success',
                        title: 'Silindi'
                    })
                    Swal.fire({
                        title: 'Başarılı',
                        text: 'Seçilen Siparişler Silindi',
                        icon: 'success',
                        confirmButtonText: 'Tamam'
                    }).then((result) => {
                        if (result.value) {

                            window.location.href = 'index.php?route=entegrasyon/order&{{ token_link }}';

                        }
                    })

                }


            }, 'JSON');


        }


    });


</script>


